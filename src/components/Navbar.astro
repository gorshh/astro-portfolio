---
import Link from "./common/Link.astro";
import Logo from "./common/Logo.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<nav id="navbar" class="show">
  <Logo mode="dark" class="nav-logo" />
  <Link href="#about" class="nav-link">{t('nav.about')}</Link>
  <Link href="#works" class="nav-link">{t('nav.works')}</Link>
  <Link href="#experience" class="nav-link">{t('nav.experience')}</Link>
  <Link href="#testimonials" class="nav-link">References</Link>
  <Link href="#contact" class="nav-link">{t('nav.contact')}</Link>
  <Link href="/blog" class="nav-link">{"Blog"}</Link>
</nav>

<style>
  nav {
    position: fixed;
    bottom: 1rem;
    left: 0;
    right: 0;
    width: fit-content;
    margin: 0 auto;
    display: flex;
    align-items: center;
    border: 0.0625rem solid #ffffff1a;

    padding: 0.5rem 1rem;

    border-radius: 0.6rem;
    background-color: #00000080;
    backdrop-filter: blur(18.75rem);
    color: #fff;
    mix-blend-mode: normal;
    z-index: 9999;
    opacity: 0;

    transition:
      transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1),
      opacity 0.4s ease-in-out;
    will-change: transform, opacity;
    backdrop-filter: blur(10px);
    transform: translate3d(0%, 150%, 0);

    @media (max-width: 670px) {
      display: none;
    }
  }

  .nav-logo {
    margin-right: 1rem;
  }

  .nav-link {
    font-size: 0.8rem;
    opacity: 0.8;
    padding: 0.5rem 1rem;
    font-weight: 200;
    text-transform: capitalize;
    font-family: system-ui,-apple-system;
    &::after {
      display: none;
    }

    &:hover {
      text-decoration: underline;
    }
  }
  #navbar.show {
    transform: translate3d(0, 0, 0);
    opacity: 1;
  }

</style>

<script>
  let lastScrollY = window.scrollY;
  const navbar = document.getElementById("navbar") as HTMLDivElement;

  window.addEventListener("scroll", () => {
    const currentScroll = window.scrollY;

    if (currentScroll > lastScrollY && currentScroll > 100) {
      navbar.classList.remove("show");
    } else if (currentScroll < lastScrollY) {
      navbar.classList.add("show");
    }

    lastScrollY = currentScroll;
  });
</script>
