---
import Link from "./Link.astro";

interface Props {
  mode?: "light" | "dark";
  class?: string;
}

const { mode = "light", class: className, ...rest } = Astro.props as Props;

const finalClasses = ["logo", mode, className];
// ADD scroll to top
---

<span class:list={finalClasses} {...rest}>J</span>

<style>
  .logo {
    font-family: "WienModern";
    height: 33px;
    cursor: pointer;
    width: 33px;

    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 2px;
    border-radius: 4px;
    font-size: 20px;
    line-height: 0;
    user-select: none;
    transition: background-color ease 0.2s, color ease 0.3s;


    &::after {
      display: none;
    }
  }

  .light {
    background-color: var(--white-color);
    color: var(--black-color);

    &:hover {
      color: rgba(var(--white-rgb), 0.8);
      background-color: var(--black-color);
    }
  }

  .dark {
    color: var(--white-color);
    background-color: var(--black-color);

    &:hover {
      background-color: rgba(var(--white-rgb), 0.8);
      color: var(--black-color);
    }
  }
</style>

<script>
  const button = document.querySelector('.logo') as HTMLButtonElement


  button.addEventListener("click", (e) => {
    e.preventDefault()
    window.scrollTo({top:0})
  })

</script>
