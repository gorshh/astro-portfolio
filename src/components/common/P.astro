---
import type { TypographyProps } from "../../types/typography";
import { defaultSizes } from "../../types/typography"; // Importaci칩n sin "type"

const { as = "p", size, align, class: customClass = "", ...rest }: TypographyProps = Astro.props;

// Usa `defaultSizes` correctamente
const appliedSize = size ?? defaultSizes[as] ?? "body";

// Genera clases din치micas
const classes = [appliedSize, align ? `text-${align}` : "", customClass].filter(Boolean).join(" ");

// 游댳 Define el elemento din치mico a renderizar (h1, p, etc.)
const DynamicTag = as;
---

<DynamicTag class:list={classes} {...rest}>
  <slot />
</DynamicTag>

<style>
  /* ---------------- TIPOGRAF칈A ---------------- */

  .display-xxl,
  .display-xl,
  .display-lg,
  .heading-lg {
    font-family: "PP Mori";
    color: inherit;
    margin-bottom: 10px;
    letter-spacing: -1px;
  }

  .display-xxl { font-size: 80px; font-weight: 700; letter-spacing: -2px; }
  .display-xl { font-size: 64px; font-weight: 600; letter-spacing: -2px; }
  .display-lg { font-size: 48px; font-weight: 500; letter-spacing: -2px; }
  .heading-xl { font-size: 32px; font-weight: 500; line-height: 48.3194px; }
  .heading-lg { font-size: 24px; font-weight: 400; margin-bottom: 4px; }
  .body { font-size: 24px; color: inherit; margin-bottom: 8px; }
  .body-sm { font-size: 13px; color: inherit; margin-bottom: 8px; }
  .strong { font-weight: 600; color: inherit; font-size: inherit; }

  /* Alineaciones din치micas */
  .text-left { text-align: left; }
  .text-center { text-align: center; }
  .text-right { text-align: right; }

  @media (max-width: 420px) {
    .display-xl { font-size: 40px; }
    .heading-xl { font-size: 28px; }
    .body { font-size: 20px; }
  }

  @media (max-width: 920px) {
    .display-xxl { font-size: 48px; letter-spacing: 0; }
    .heading-xl { font-size: 20px; font-weight: 500; line-height: 25px; }
  }

</style>
