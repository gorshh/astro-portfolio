---
import ScrollBar from '../common/ScrollDown.astro'
import Blotter from '../common/Blotter.astro'
import Link from '../common/Link.astro'
import Logo from '../common/Logo.astro'
---

<section id="home">
  <div class="top-navigation_component">
    <div class="left-side">
      <Logo />
      <h1 class="heading-style-header">
        CREATIVE developer, crafting sleek & functional interfaces
      </h1>
    </div>

    <div class="navigation_social-links-button">
      <Link href='#cta' class='cta'>Lets talk</Link>
    </div>
  </div>

  <Blotter/>
  <ScrollBar/>


</section>

<style>
  .top-navigation_component {    
    color: var(--title-color);
    background-color: rgba(var(--white-rgb), 0.04);

    border-radius: 0.6rem;
    justify-content: space-between;
    align-items: center;
    margin: 1rem 1.5rem 0;
    padding: 0.5rem 1.5rem;
    display: flex;
    text-transform: uppercase;
    font-size: 0.8rem;
  }

  .heading-style-header {
    text-transform: uppercase;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .left-side {
    /* border: solid 1px red; */
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .navigation_social-links-button {
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    background-color: #0000;
    grid-template-rows: auto;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-auto-columns: 1fr;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding-left: 0%;
    padding-right: 0%;
    display: flex;
    position: static;
    inset: 0%;
  }

  .cta {
    padding: 0.5rem 0.8rem;
    font-size: 0.8rem;
    background-color: #0000;
    border: 0.0625rem solid #0000;
    font-weight: 600;
  }

  #canvas {
    transition: ease-in-out 0.5s;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
</style>
