---
import P from "../common/P.astro";
---

<style>
  :root {
    --underline-width: 1lh;
    --underline-block-width: 400vmax;
    --underline-color: hsl(0 0% 20% / 0.1); /* mÃ¡s suave en claro */
    --underline-transition: 5s;
    --finish-fill: var(--black-color); /* texto final: casi negro */
    --accent: hsla(0, 0%, 0%, 0.3); /* acento: gris oscuro translÃºcido */
    --fill: hsl(0, 0%, 30%); /* relleno previo: gris medio */
  }

  .text-reveals {
    font-size: 24px;
    color: var(--color);
    background-image: linear-gradient(
        90deg,
        transparent calc(100% - 8ch),
        var(--accent) calc(100% - 8ch)
      ),
      linear-gradient(90deg, var(--fill), var(--fill)),
      linear-gradient(90deg, var(--underline-color), var(--underline-color));
    background-size:
      var(--underline-block-width) var(--underline-width),
      var(--underline-block-width) var(--underline-width),
      100% var(--underline-width);
    background-repeat: no-repeat;
    background-position-x: 0;
    background-position-y: 100%;
    background-clip: text;
    color: var(--finish-fill);

    @media (max-width: 420px) {
      font-size: 20px;
    }
    
  }

  .about {
    height: 250vh;
    background-color: var(--white-color);
    color: var(--black-color);
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
  }

  section {
    position: sticky;
    top: 0;
    height: 100vh;
    max-width: 1080px;
    margin: 0 auto;
    padding-top: 10rem;
    padding-bottom: 10rem;
    text-align: center;

    @media (max-width: 420px) {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }

  @supports (animation-timeline: scroll()) {
    @media (prefers-reduced-motion: no-preference) {
      .about {
        view-timeline-name: --section;
      }

      .text-reveals {
        background-position-x: calc(var(--underline-block-width) * -1),
          calc(var(--underline-block-width) * -1), 0;
        color: transparent;
        animation-name: fill-up, color-in;
        animation-fill-mode: both;
        animation-timing-function: linear;
        animation-timeline: --section;
        animation-range:
          entry 100% cover 50%,
          cover 50% exit 0%;
      }

      @keyframes fill-up {
        to {
          background-position-x: 0, 0, 0;
        }
      }

      @keyframes color-in {
        to {
          color: var(--finish-fill);
        }
      }
    }
  }
</style>

