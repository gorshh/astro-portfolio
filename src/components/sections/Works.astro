<style>
  .works {
    background-color: var(--white-color);
    color: var(--black-color);
    display: flex;
    padding-top: 5rem;
    padding-bottom: 5rem;
    min-height: 100vh;
    justify-content: space-between;


    @media (max-width: 420px) {
      padding-top: 0rem;
    }

    @media (max-width: 1150px) {
      flex-direction: column;
    }
  }

  .works--description {
    position: sticky;
    top: 50px;
    height: fit-content;
    


    @media (max-width: 1150px) {
      margin-bottom: 2rem;
      position: static;
      text-wrap: auto;
    }
  }

  .work--gallery {
    width: 70%;
    min-width: 70%;
    display: grid;

    grid-template-columns: repeat(1, minmax(0, 1fr));

    column-gap: 1rem;
    row-gap: 3rem;

    
    @media (max-width: 1150px) {
      width: 100%;
    min-width: 100%;
    row-gap: 1rem;
    }

    article {
      padding-top: 0.7rem;
      padding-bottom: 0.7rem;

      img {
        width: 100%;
        height: 80vh;
        object-fit: cover;
        border-radius: 12px;

        @media (max-width: 1150px) {
          height: auto;
    }
      }

      .work--description {
        max-width: 75ch;
        width: 100%;
        margin-top: 8px;

        .body {
          margin: 0;
        }
      }
    }
  }

  .work {
    opacity: 0;
    transform: translateY(50px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  /* When article is visible */
  .work.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered delay for each item */
  .work:nth-child(1) {
    transition-delay: 0.2s;
  }
  .work:nth-child(2) {
    transition-delay: 0.4s;
  }
  .work:nth-child(3) {
    transition-delay: 0.6s;
  }
  .work:nth-child(4) {
    transition-delay: 0.8s;
  }
  .work:nth-child(5) {
    transition-delay: 0.1s;
  }
  .work:nth-child(6) {
    transition-delay: 0.12s;
  }
</style>

<script>
  function revealOnScroll() {
    const works = document.querySelectorAll(".work");
    const windowHeight = window.innerHeight;

    works.forEach((work) => {
      const rect = work.getBoundingClientRect();
      if (rect.top < windowHeight - 100) {
        work.classList.add("visible");
      }
    });
  }

  window.addEventListener("scroll", revealOnScroll);
  window.addEventListener("load", revealOnScroll); // Run on page load
</script>
