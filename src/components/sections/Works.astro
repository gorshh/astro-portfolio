<style>
  .works {
    background-color: var(--white-color);
    color: var(--black-color);
    display: flex;
    padding-top: 5rem;
    padding-bottom: 5rem;
    min-height: 100vh;
    justify-content: space-between;
    /* border: solid 1px red; */
  }

  .works--description {
    position: sticky;
    top: 50px;
    height: fit-content;

    text-wrap: balance;
  }

  .work--gallery {
    width: 70%;
    min-width: 70%;
    display: grid;

    grid-template-columns: repeat(1, minmax(0, 1fr));
    /* grid-template-columns: repeat(12, minmax(0, 1fr)); */

    column-gap: 1rem;
    row-gap: 1rem;
    /* border: solid 1px red; */

    article {
      height: 100vh;
      padding-top: 1rem;
      padding-bottom: 1rem;
      /* border: solid 1px green; */


      img {
        width: 100%;
        
        height: 85vh;
        object-fit: cover;
        border-radius: 1rem;
      }
      
      width: 100%;


      .work--description {
        width: 100%;
        height: 200px;
        margin-top: 8px;

        .body {
          margin: 0;
        }

        

      }
    }


</style>
