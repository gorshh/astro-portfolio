<style>
  .works {
    background-color: var(--white-color);
    color: var(--black-color);
    display: flex;
    padding-top: 5rem;
    padding-bottom: 5rem;
    min-height: 100vh;
    justify-content: space-between;
  }

  .works--description {
    position: sticky;
    top: 50px;
    height: fit-content;

    text-wrap: balance;
  }

  .work--gallery {
    width: 70%;
    min-width: 70%;
    display: grid;

    grid-template-columns: repeat(1, minmax(0, 1fr));
    /* grid-template-columns: repeat(12, minmax(0, 1fr)); */

    column-gap: 1rem;
    row-gap: 1rem;
    /* border: solid 1px red; */

    article {
      height: 100vh;
      padding-top: 0.7rem;
      padding-bottom: 0.7rem;
      /* border: solid 1px green; */


      img {
        width: 100%;
        
        height: 85vh;
        object-fit: cover;
        border-radius: 1rem;
      }
      
      width: 100%;


      .work--description {
        width: 100%;
        /* height: 200px; */
        margin-top: 8px;

        .body {
          margin: 0;
        }

        

      }
    }




    .work {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  /* When article is visible */
  .work.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered delay for each item */
  .work:nth-child(1) { transition-delay: 0.2s; }
  .work:nth-child(2) { transition-delay: 0.4s; }
  .work:nth-child(3) { transition-delay: 0.6s; }
  .work:nth-child(4) { transition-delay: 0.8s; }
  .work:nth-child(5) { transition-delay: 0.10s; }
  .work:nth-child(6) { transition-delay: 0.12s; }
</style>



<script>
  function revealOnScroll() {
    const works = document.querySelectorAll(".work");
    const windowHeight = window.innerHeight;
    
    works.forEach((work) => {
      const rect = work.getBoundingClientRect();
      if (rect.top < windowHeight - 100) {
        work.classList.add("visible");
      }
    });
  }

  window.addEventListener("scroll", revealOnScroll);
  window.addEventListener("load", revealOnScroll); // Run on page load
</script>