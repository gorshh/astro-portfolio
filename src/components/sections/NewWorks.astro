<style>
  .projects {
    background-color: var(--white-color);
    position: relative;
    padding-top: 4rem;

    @media (min-width: 1024px) {
      padding-top: 0rem;
    }
  }

  .projects--title {
    height: fit-content;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    /* border: solid 1px red; */

    @media (min-width: 1024px) {
      text-align: center;
      width: min-content;
      position: sticky;
      top: 40vh;
      left: 50%;
      transform: translateX(-50%);
    }
  }

  .hola {
    width: 100%;

    img {
      width: 100%;
      object-fit: cover;
    }


    @media (min-width: 1024px) {
      width: 43%;
    }
    /* border: solid 1px green; */
  }

  .right {
    align-self: flex-start;

    @media (min-width: 1024px) {
      align-self: flex-end;
    }
  }

  .x {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
    gap: 1rem;

    @media (min-width: 1024px) {
      margin-top: 100vh;
      gap: 80dvh;
    }
  }

  .work--description {
    max-width: 75ch;
    width: 100%;
    margin-top: 0.5rem;

    .body {
      margin: 0;
    }

    .body-sm {
      margin: 4px 0;
    }

    a {
      margin: 0;
      font-size: 14px;
    }
  }
</style>
