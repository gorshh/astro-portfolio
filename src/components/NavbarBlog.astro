---
import Logo from "./common/Logo.astro";

const links = [
  { href: "/b", label: "Blog" },
  { href: "/b/categories", label: "Categories" },
  { href: "www.jorshh.com", label: "About" },
  { href: "/b/contact", label: "Contact" },
];
---

<nav class="navbar">
  <div class="container--desktop">
    <Logo mode="light" class="nav-logo" href="/b" />
    <ul class="nav-links">
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<nav class="navbar--mobile">
  <div class="container--mobile">
    <div class="mobile-menu">
      <ul class="nav-links">
        {
          links.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))
        }
      </ul>
    </div>

    <button class="mobile-menu-button" aria-label="Open menu">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>
</nav>

<style>
  .navbar {
    position: sticky;
    width: 100%;
    border-radius: 0.75rem;
    max-width: 1280px;
    top: 0.5rem;
    z-index: 1;
    margin: 0 auto;
    color: #fff;
    backdrop-filter: blur(20px);
    display: none;

    @media (min-width: 768px) {
      display: block;
    }

    .container--desktop {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0 auto;
      padding: 0.75rem;

      .nav-links {
        list-style: none;
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0;
      }

      .nav-links a {
        text-decoration: none;
        color: rgb(143, 143, 153);
        transition: color 0.3s;
        font-size: 14px;
      }

      .nav-links a:hover {
        color: #fff;
      }
    }
  }

  .container--mobile {
    display: block;

    @media (min-width: 768px) {
      display: none;
    }

    .mobile-menu-button {
      position: fixed;
      bottom: 1.5rem;
      right: 1.5rem;
      background: rgba(0, 0, 0, 0);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(214, 214, 214, 0.15);
      border-radius: 50%;
      padding: 0.75rem;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      color: #fff;
      cursor: pointer;
      transition:
        background 0.3s,
        transform 0.3s;
      opacity: 0.9;
    }

    .mobile-menu-button:hover {
      background: rgba(255, 255, 255, 0.15);
      transform: scale(1.05);
    }

    .mobile-menu {
      top: -2rem;
      padding: 2rem;
      padding-top: 4rem;
      background-color: red;
      position: fixed;
      background: rgba(0, 0, 0, 0.658);
      backdrop-filter: blur(16px);
      width: 100%;
      height: 110vh;
      z-index: 100;

      opacity: 0;
      transform: translateX(20px);
      pointer-events: none;
      transition:
        opacity 0.3s ease,
        transform 0.3s ease;

      .nav-links {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 1rem;

        flex-direction: column;
        justify-content: flex-end; /* ðŸ‘ˆ Empuja todo hacia abajo */
        align-items: flex-end; /* ðŸ‘ˆ Alinear a la derecha */
        height: 100vh; /* ðŸ‘ˆ Ocupar toda la altura de la pantalla */
      }

      .nav-links a {
        text-decoration: none;
        /* color: rgb(143, 143, 153); */
        color: white;
        transition: color 0.3s;
        font-size: 2rem;
        font-family: "PP Mori";
      }

      .nav-links li:last-child {
        margin-bottom: 8rem;
      }

      .nav-links a:hover {
        color: #fff;
      }
    }
  }

  .mobile-menu.open-menu {
    opacity: 1;
    transform: translateX(0);
    pointer-events: auto;
  }
</style>

<script is:inline>
  const button = document.querySelector(".mobile-menu-button");
  const menu = document.querySelector(".mobile-menu");

  button.addEventListener("click", () => {
    menu.classList.toggle("open-menu");
  });
</script>
