---
import { getCollection } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";
import { topicIcons } from "../../utils/topicIcons";
import { formatDate } from "../../utils/formatDate";
import { getReadingTime } from "../../utils/readingTime";
import { Image } from "astro:assets";
import LatestArticles from "../../components/sections/LatestArticles.astro";

const highlightPostId = "express-middleware-patterns.md";

const posts = (await getCollection("posts")).map((p) => ({
  id: p.id,
  slug: p.slug,
  heroImage: p.data.heroImage,
  title: p.data.title,
  topic: p.data.topic,
  date: p.data.date,
  description: p.data.description,
  estimatedMinutes: getReadingTime(p.body),
}));

const sortedPosts = posts.sort((a, b) => b.date.getTime() - a.date.getTime());
const highlightPost = posts.find(({ id }) => id === highlightPostId)!;

const topic = highlightPost.topic.toLowerCase().replace(" ", "");
---

<BlogLayout description={highlightPost.description}>
  <div class="blog">
    <a class="highlight-post" href={`/b/${highlightPost.slug}/`}>
      <article class="highlight-post__header">
        <div class="highlight-post__details">
          <span class="highlight-post__topic">
            {
              topicIcons[topic] && (
                <img
                  src={topicIcons[topic]}
                  alt={topic}
                  width="14"
                  height="14"
                />
              )
            }
            {highlightPost.topic}</span
          >
          <span>{highlightPost.estimatedMinutes}min</span>
        </div>
        <h1 class="highlight-post__title">{highlightPost.title}</h1>
        <p class="highlight-post__description">
          {highlightPost.description}
        </p>
        <p class="highlight-post__date">
          {formatDate(highlightPost.date)}
        </p>
      </article>
      <Image
        class="highlight-post__image"
        src={highlightPost.heroImage}
        alt={highlightPost.title}
        width={800}
        height={450}
      />
    </a>
    <LatestArticles
      posts={sortedPosts.filter(({ id }) => id !== highlightPostId)}
    />
  </div>
</BlogLayout>

<style>
  .blog {
    margin: 0 auto;
    width: 100%;
    max-width: 1280px;
    padding: 0.75rem;
    font-size: 1.5rem;
    line-height: 1.6;
    color: white;
  }
  .highlight-post {
    display: flex;
    text-decoration: none;
    color: white;
    /* border: solid 1px red; */
    justify-content: space-between;
    align-items: center;
    margin-top: 5rem;
    margin-bottom: 5rem;
  }
  .highlight-post__header {
    width: 30%;
    /* background-color: red; */
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .highlight-post__date,
  .highlight-post__details {
    font-size: 14px;
    display: flex;
    gap: 0.5rem;
    color: #cfcfd3;
  }

  .highlight-post__topic {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .highlight-post__image {
    height: 450px;
    border-radius: 0.5rem;
    aspect-ratio: 16/9;
    object-fit: cover;
    width: 800px;
  }

  .highlight-post__title {
    font-size: 48px;
    line-height: normal;
    font-family: "PP Mori";
  }
  .highlight-post__description {
    /* line-height: normal; */
    font-size: 20px;
  }
</style>
