---
import "minireset.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ScrollBar from "../components/common/ScrollBar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Jorshh - Web Developer | React, Next.js, Node.js</title>
    <meta
      name="description"
      content="Full-Stack Developer with 5+ years of experience in React, Next.js, Node.js, AWS, RESTful APIs, and software architecture. Expert in testing, CI/CD, and agile development. Explore my work."
    />
    <meta
      name="keywords"
      content="Full Stack Developer, React Developer, Next.js, Node.js, AWS, REST API, DynamoDB, Software Engineer, Software Architecture, Testing, CI/CD, Agile Development"
    />
    <meta name="author" content="Jorshh" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph for Facebook & LinkedIn -->
    <meta
      property="og:title"
      content="Jorshh - Full-Stack Developer | React, Next.js, Node.js"
    />
    <meta
      property="og:description"
      content="Software development expertise in React, Node.js, and AWS. Experience working at leading companies, building scalable web applications."
    />
    <!-- <meta property="og:image" content="https://your-website.com/profile-image.jpg"> -->
    <meta property="og:url" content="https://jorshh.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jorshh - Full-Stack Developer" />
    <meta
      name="twitter:description"
      content="Expert in React, Next.js, Node.js, RESTful APIs, AWS, and software architecture. Explore my portfolio and experience."
    />

    <script
      src="https://cdn.jsdelivr.net/gh/bradley/blotter@latest/build/blotter.min.js"
      defer></script>
    <script src="/materials.js" defer></script>

    <!-- <meta name="twitter:image" content="https://jorshh.com/profile-image.jpg"> -->

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <ScrollBar />
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --black-rgb: 10, 10, 10;
    --white-rgb: 250, 250, 250;

    --black-color: rgb(var(--black-rgb));
    --white-color: rgb(var(--white-rgb));

    --bg-color: rgb(var(--white-rgb));
    --title-color: rgb(var(--black-rgb));
    --text-color: rgba(var(--black-rgb), 0.9);

    --imta-light: #70c1ef;
    --upax-light: #ffa333;
    --globant-1-light: #daf34a;
    --globant-2-light: #bfd733;

    --imta-dark: #254e9b;
    --upax-dark: #c76a00;
    --globant-1-dark: #7a9b00;
    --globant-2-dark: #8da300;

    --bg-color: rgb(var(--black-rgb));
    --title-color: rgb(var(--white-rgb));
    --text-color: rgba(var(--white-rgb), 0.9);
    --rgb-bg-color: var(--black-rgb);
    --imta: var(--imta-dark);
    --upax: var(--upax-dark);
    --globant-1: var(--globant-1-dark);
    --globant-2: var(--globant-2-dark);
  }

  @font-face {
    font-family: "PP Mori";
    src: url("/fonts/PPMori-SemiBold.otf") format("opentype");
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "WienModern";
    src: url("/fonts/WienModern-Regular.otf");
    font-style: normal;
    font-weight: 400;
  }

  body {
    font-family:  system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      sans-serif;
    color: var(--text-color);
    font-size: 18px;
    will-change: background-color, color;
    transition: background-color 0.5s ease,color 0.2s ease;
  }


  ::selection {
    background-color: rgb(80, 120, 243);
    color: var(--title-color);
  }
</style>
